<%- include('../includes/head'); %>


<section class="mt-2">
    <div class="container-fluid text-center">
        <div class="row align-items-center justify-content-center">
            <div class="col-12 my-5 d-flex flex-column  bd-highlight" >
                <h1 class="bd-highlight mb-4">Listagem produtos do estoque</h1>
                <section>
                    <div class="table-responsive-sm">
                      <table class="table  text-center">
                      <thead >
                        <tr>
                          <th class="border-top border-dark" scope="col">Nome do produto</th>
                          <th class="border-top border-dark" scope="col">Quantidade</th>
                          <th class="border-top border-dark" scope="col">Categoria</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% listSoda.forEach(product => { %>
                            <tr>
                              <td class="border-bottom border-dark"><%= product.nome_produto %></td>
                              <td class="border-bottom border-dark"><%= product.quantidade %></td>
                              <td class="border-bottom border-dark"><%= product.categoria %></td>
                            </tr>
                        <%  }) %>
                      </tbody>
                      </table>
                    </div>
                  </section>
        </div>
    </div>
  </div>
</section>





<%- include('../includes/footer'); %>