<%- include('includes/head'); %>


<section class="mt-2">
    <div class="container-fluid text-center">
        <div class="row align-items-center justify-content-center">
            <div class="col-12 my-5 d-flex flex-column  bd-highlight" >
                <h1 class="bd-highlight mb-4">Cadastrar um novo usuário</h1>
                <form action="/cadastrarUsuario/novoUsuario" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="container">
                        <div class="row align-items-center justify-content-center">
                            <div class="col-12">
                                <div class="my-5">
                                    <label for="">Nome do Usuário</label>
                                    <input required placeholder="Adicione o nome para o novo usuário" name="usuario" type="text" class="form-control">
                                </div>
                                <div class="my-5">
                                    <label for="">Senha do Usuário</label>
                                    <input required name="senha" placeholder="Adicione uma senha para o novo usuário" type="password" class="form-control">
                                </div>
                                <button class="btn btn-success mt-5 mb-3" type="submit">Cadastrar Usuário</button>
                                <%- include('includes/messages'); %>
                            </div>
                        </div>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</section>





<%- include('includes/footer'); %>